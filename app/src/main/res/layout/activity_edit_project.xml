<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/edit_project_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/project_icon"
            android:scaleType="centerCrop"
            android:contentDescription="@string/project_image"
            android:layout_marginBottom="16dp" />

        <!-- زر لتغيير الصورة -->
        <Button
            android:id="@+id/change_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_image"
            android:backgroundTint="@color/purple"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- اسم المشروع -->
        <EditText
            android:id="@+id/edit_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/project_name"
            android:background="@drawable/textfield_border"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- وصف المشروع -->
        <EditText
            android:id="@+id/edit_project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/project_description"
            android:background="@drawable/textfield_border"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- تاريخ البداية -->
        <EditText
            android:id="@+id/edit_project_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/start_date"
            android:background="@drawable/textfield_border"
            android:padding="12dp"
            android:textColor="@color/black"
            android:inputType="date"
            android:layout_marginBottom="12dp" />

        <!-- تاريخ النهاية -->
        <EditText
            android:id="@+id/edit_project_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/end_date"
            android:background="@drawable/textfield_border"
            android:padding="12dp"
            android:textColor="@color/black"
            android:inputType="date"
            android:layout_marginBottom="24dp" />

        <!-- زر الحفظ -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:backgroundTint="@color/purple"
            android:padding="12dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
